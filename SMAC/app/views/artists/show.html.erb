<p>
  <strong> Alias: </strong>
  <%= @artist.alias %>
</p>
 
<p>
  <strong> Real name: </strong>
  <%= @artist.real_name %>
</p>

<p>
  <strong> Age: </strong>
  <%= @artist.age %>
</p>

<p>
  <strong> Place of origin: </strong>
  <%= @artist.place_of_origin %>
</p>

<p>
  <strong> Gender: </strong>
  <%= @artist.gender %>
</p>

<p>
  <strong> Info: </strong>
  <%= @artist.info %>
</p>

<p>
  <%= if not @artist.selfie.blank?
        image_tag(@artist.selfie, size: 512)
      end %>
</p>

<p> <strong> Band(s): </strong> </p>

<% @artist.bands.each do |band| %>

  <p> <%= band.name %> </p>

<% end %>

<p> <strong> Release(s): </strong> </p>

<% @artist.releases.each do |release| %>

  <p> <%= release.title %> </p>

<% end %>

<hr>

<%= link_to "Back", artists_path %>
